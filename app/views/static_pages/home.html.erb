<% if signed_in? %>
	<div class="row">
		<aside class="span4">
			<section>
				<%= render 'shared/user_info' %>
			</section>
		</aside>
	</div>

<% else %>
<div class="jumbotron">
	<div class="container">
		<div class="row col-md-4 col-md-offset-4">
		<h1> Howdy Oenophile!</h1>
		<p> This flash card app will get you learning wine in no time, 
			Sign Up or <%= link_to "Sign In", signin_path %> to get started!
		</p>
		<p><%= link_to "Sign Up", signup_path, class: "btn btn-primary btn-lg" %></p>
		</div>
	</div>
</div>
<% end %>